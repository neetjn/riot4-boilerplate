{
  "name": "riot4-boilerplate",
  "version": "1.0.0",
  "description": "Riot.js 4 web app boilerplate with Webpack and Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint src/**/**.js",
    "pretty": "npx prettier-eslint --write src/**/**.js",
    "bundle": "./node_modules/.bin/webpack --config webpack.config.js",
    "build": "npm run lint && npm run pretty && npm run bundle",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neetjn/riot4-boilerplate.git"
  },
  "author": "John Nolette <john@neetgroup.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neetjn/riot4-boilerplate/issues"
  },
  "homepage": "https://github.com/neetjn/riot4-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@icon/entypo": "^1.0.0",
    "@riotjs/compiler": "^4.1.1",
    "@riotjs/webpack-loader": "^4.0.0",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "file-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.1",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "resolve-url-loader": "^5.0.0",
    "riot": "^4.0.0-rc.13",
    "tailwindcss": "^1.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.12"
  }
}
